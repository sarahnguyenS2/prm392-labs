<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#673AB7"
            android:text="Linear Layout KPT"
            android:textColor="#FAF6F6"
            android:textSize="34sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#D6CC74"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#877D2D"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="60sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="600px"
                    android:background="#EB8EFB"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#9C27B0"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="224dp"
                    android:height="650px"
                    android:background="#FFEB3B"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#525722"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="234dp"
                    android:height="550px"
                    android:background="#F44336"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#650505"
                    android:textSize="60sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="524dp"
                    android:height="1500px"
                    android:background="#DD704609"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="#472D06"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="162dp"
                    android:height="350px"
                    android:background="#FAC7C7"
                    android:gravity="center"
                    android:text="7"
                    android:textAlignment="center"
                    android:textColor="#674242"
                    android:textSize="60sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000F65"
                    android:text="NodeJS"
                    android:textColor="#00BCD4"
                    android:textSize="48sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>